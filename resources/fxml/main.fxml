<BorderPane fx:id="mMainPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thehoick.dvdpila.MainController">
    <top>
        <MenuBar>
            <Menu text="Settings">
                <MenuItem text="DVD Pila! URL" onAction="#showSettingsDialog" />
            </Menu>
        </MenuBar>
    </top>
   <center>
      <GridPane gridLinesVisible="true" GridPane.rowIndex="2">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

          <padding>
              <Insets left="10" right="10" />
          </padding>
         <children>
             <Text text="I've Got Worms..." GridPane.rowIndex="1" />
             <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                 <children>
                     <Text text="DVD Pila! (Menu)" />
                     <Button mnemonicParsing="false" text="Settings" onAction="#getDvds"/>
                 </children>
                 <padding>
                     <Insets bottom="10" left="10" right="10" top="5" />
                 </padding>
             </HBox>
         </children>

      </GridPane>
   </center>
</BorderPane>
